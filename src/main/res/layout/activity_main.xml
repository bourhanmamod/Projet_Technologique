<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">


        <Button
            android:id="@+id/to_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To_grey1" ></Button>

        <Button
            android:id="@+id/to_grey2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To_grey2"></Button>

        <Button
            android:id="@+id/only_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="only_red" ></Button>

        <Button
            android:id="@+id/contrast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="contrast"></Button>

    </LinearLayout>


    <ImageView
        android:id="@+id/spidy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/spidy"></ImageView>




</androidx.constraintlayout.widget.ConstraintLayout>