<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">


        <Button
            android:id="@+id/to_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To_grey1"></Button>


        <Button
            android:id="@+id/to_grey2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To_grey2"
            android:layout_toRightOf="@+id/to_grey"></Button>

        <Button
            android:id="@+id/only_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="only_red"
            android:layout_toRightOf="@+id/to_grey2">
        </Button>

        <Button
            android:id="@+id/colorize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="colorize"
            android:layout_toRightOf="@+id/only_red">></Button>

        <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reset"
            android:layout_toRightOf="@+id/colorize">></Button>

        <Button
            android:id="@+id/lde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LDE"
            android:layout_below="@+id/to_grey"></Button>

        <Button
            android:id="@+id/hea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HEA"
            android:layout_below="@+id/to_grey2"
            android:layout_toRightOf="@+id/lde">

        </Button>

        <Button
            android:id="@+id/change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change"
            android:layout_below="@+id/only_red"
            android:layout_toRightOf="@+id/hea">

        </Button>

    </RelativeLayout>


    <ImageView
        android:id="@+id/spidy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/spidy"></ImageView>




</androidx.constraintlayout.widget.ConstraintLayout>