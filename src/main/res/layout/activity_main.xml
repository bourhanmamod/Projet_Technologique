<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-99dp"
        tools:layout_editor_absoluteY="-26dp">


        <Button
            android:id="@+id/to_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To_grey1"></Button>


        <Button
            android:id="@+id/to_grey2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/to_grey"
            android:text="To_grey2"></Button>

        <Button
            android:id="@+id/only_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/to_grey2"
            android:text="only_red"></Button>

        <Button
            android:id="@+id/colorize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/only_red"
            android:text="colorize">></Button>

        <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/colorize"
            android:text="reset">></Button>

        <Button
            android:id="@+id/lde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/to_grey"
            android:text="LinDynExt"></Button>

        <Button
            android:id="@+id/hea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/to_grey2"
            android:layout_toRightOf="@+id/lde"
            android:text="HistEgal"></Button>

        <Button
            android:id="@+id/chea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hea"
            android:text="ColHistEgal"></Button>


        <Button
            android:id="@+id/clde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/only_red"
            android:layout_toRightOf="@+id/hea"
            android:text="ColLinDynExt">

        </Button>


        <Button
            android:id="@+id/change_toSpidy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reset"
            android:layout_toRightOf="@+id/clde"
            android:text="Change To Spidy"></Button>


        <Button
            android:id="@+id/change_toDiagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/clde"
            android:layout_toRightOf="@+id/chea"
            android:text="Change To Diag"></Button>

        <ImageView
            android:id="@+id/color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/color"></ImageView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/color"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="78dp" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>